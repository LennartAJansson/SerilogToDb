{

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=(localdb)\\mssqllocaldb;Database=LogTest;Integrated Security=True;",
          "sinkOptionsSection": {
            "tableName": "LogEvents",
            "autoCreateSqlTable": true,
            "useAzureManagedIdentity": false,
            "azureServiceTokenProviderResource": "https://database.windows.net/"
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": [ "SourceContext", "MachineName" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            },
            "additionalColumns": [
              {
                "columnName": "SourceContext",
                "propertyName": "SourceContext",
                "DataType": "varchar",
                "DataLength": -1
              },
              {
                "columnName": "MachineName",
                "propertyName": "MachineName",
                "DataType": "varchar",
                "DataLength": -1
              }
            ]
          }
        }
      }
    ]
  }
}
